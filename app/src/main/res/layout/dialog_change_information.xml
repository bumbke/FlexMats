<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#dcdde1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/toolbarColor"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_change_info_title"
            android:textColor="?attr/secondTextColor"
            android:layout_gravity="center"
            android:textSize="@dimen/textsizeXNormal"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacingNormal"
        android:background="@drawable/line_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingStart="@dimen/spacingSmall"
            android:textColor="?attr/primaryiconColor"
            android:text="@string/dialog_change_info_name"
            android:textSize="@dimen/textsizeNormal"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edName"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingXMinor"
            android:paddingLeft="@dimen/spacingSmall"
            android:paddingTop="@dimen/spacingXMinor"
            android:paddingBottom="@dimen/spacingXMinor"
            android:background="@drawable/border_all_round"
            android:textSize="@dimen/textsizeNormal" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingStart="@dimen/spacingSmall"
            android:textColor="?attr/primaryiconColor"
            android:text="@string/dialog_change_info_dob"
            android:textSize="@dimen/textsizeNormal"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edDoB"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingXMinor"
            android:paddingLeft="@dimen/spacingSmall"
            android:paddingTop="@dimen/spacingXMinor"
            android:paddingBottom="@dimen/spacingXMinor"
            android:background="@drawable/border_all_round"
            android:textSize="@dimen/textsizeNormal" />

        <ImageButton
            android:id="@+id/btnPickDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingMinor"
            android:padding="@dimen/spacingXMinor"
            android:src="@drawable/ic_date_range_black"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingStart="@dimen/spacingSmall"
            android:layout_marginTop="@dimen/spacingXMinor"
            android:layout_marginBottom="@dimen/spacingXMinor"
            android:textColor="?attr/primaryiconColor"
            android:text="@string/dialog_change_info_gender"
            android:textSize="@dimen/textsizeNormal"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="@dimen/spacingXMinor"
            android:layout_marginBottom="@dimen/spacingXMinor"
            android:textColor="?attr/primaryiconColor"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingStart="@dimen/spacingSmall"
            android:textColor="?attr/primaryiconColor"
            android:text="@string/dialog_change_info_jobs"
            android:textSize="@dimen/textsizeNormal"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edJobs"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingXMinor"
            android:paddingLeft="@dimen/spacingMinor"
            android:paddingTop="@dimen/spacingXMinor"
            android:paddingBottom="@dimen/spacingXMinor"
            android:background="@drawable/border_all_round"
            android:textSize="@dimen/textsizeNormal" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingStart="@dimen/spacingSmall"
            android:textColor="?attr/primaryiconColor"
            android:text="@string/dialog_change_info_bio"
            android:textSize="@dimen/textsizeNormal"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edBio"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingXMinor"
            android:background="@drawable/border_all_round"
            android:ems="10"
            android:inputType="textMultiLine"
            android:enabled="true"
            android:minLines="2"
            android:maxLines="2"
            android:paddingLeft="@dimen/spacingSmall"
            android:paddingTop="@dimen/spacingXMinor"
            android:paddingBottom="@dimen/spacingXMinor"
            android:isScrollContainer="true"
            android:textSize="@dimen/textsizeNormal" />
    </LinearLayout>


</LinearLayout>