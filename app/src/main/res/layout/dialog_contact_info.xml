<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imbCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_cancel" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout3"
        android:paddingTop="20dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iviewLogo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_fletmaticon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iviewLogo"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Flexmats"
            android:textAllCaps="false"
            android:textColor="#00A99D"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAppName"
            android:layout_marginTop="@dimen/spacingNormal"
            android:gravity="center"
            android:text="Address"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/spacingMinor"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="391A, Nam Kỳ Khởi Nghĩa, Q3, TP. Hồ Chí Minh"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt3"
            android:layout_marginTop="@dimen/spacingNormal"
            android:gravity="center"
            android:text="Hotline"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt4"
            android:layout_marginTop="@dimen/spacingMinor"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="01225611186 - 0888076958"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt5"
            android:layout_marginTop="@dimen/spacingNormal"
            android:gravity="center"
            android:text="Support Email"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt6"
            android:layout_marginTop="@dimen/spacingMinor"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="quypnps05234@fpt.edu.vn"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
        </RelativeLayout>
</RelativeLayout>