<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_all_round">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvt"
            android:layout_width="@dimen/avatarSmall"
            android:layout_height="@dimen/avatarSmall"
            android:scaleType="centerCrop"
            android:src="@drawable/item1"
            android:layout_margin="@dimen/spacingSmall"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            app:civ_border_color="?attr/primaryColor"/>

        <RelativeLayout
            android:layout_toRightOf="@id/ivAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoang Xuan Huy"
                android:layout_marginHorizontal="@dimen/spacingSmall"
                android:ellipsize="end"
                android:textColor="?attr/primaryTextColor"
                android:textStyle="bold"
                android:textSize="@dimen/textsizeNormal"/>

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huyhoang@gmail.com"
                android:layout_below="@id/tvName"
                android:layout_marginTop="@dimen/spacingMinor"
                android:ellipsize="end"
                android:layout_marginHorizontal="@dimen/spacingSmall"
                android:textColor="?attr/fourthText"
                android:textSize="@dimen/textsizeSmall"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacingNormal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_centerHorizontal="true"
                android:textColor="?attr/thirdTextColor"
                android:textStyle="bold"
                android:textSize="@dimen/textsizeXNormal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLike"
                android:text="LIKES"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/textsizeNormaler"
                android:textColor="?attr/fourthText"
                android:textStyle="bold"/>
        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>